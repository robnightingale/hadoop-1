<configuration>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
	 <property>
                <name>dfs.namenode.name.dir</name>
                <value>file:/usr/local/hadoop_store/hdfs/namenode</value>
                </property>
        <property>
                <name>dfs.datanode.data.dir</name>
                <value>file:/usr/local/hadoop_store/hdfs/datanode</value>
                </property>
<property>
        <name>dfs.datanode.max.xcievers</name>
        <value>8192</value>
</property>
<property>
  <name>dfs.webhdfs.enabled</name>
  <value>true</value>
</property>

<property>
<name>dfs.block.access.token.enable</name>
<value>true</value>
</property>


<property>
<name>dfs.namenode.keytab.file</name>
<value>/etc/security/keytabs/hduser.keytab</value> <!-- path to the HDFS keytab -->
</property>
<property>
<name>dfs.namenode.kerberos.principal</name>
<value>hduser/_HOST@CLOUD.COM</value>
</property>
<property>
<name>dfs.namenode.kerberos.internal.spnego.principal</name>
<value>HTTP/_HOST@CLOUD.COM</value>
</property>
<property>
         <name>dfs.secondary.namenode.kerberos.principal</name>
         <value>hduser/_HOST@CLOUD.COM</value>
         <description>Kerberos principal name for the secondary NameNode.
         </description>
    </property>
<property>
         <name>dfs.secondary.namenode.keytab.file</name>
         <value>/etc/security/keytabs/hduser.keytab</value>
         <description>
         Combined keytab file containing the namenode service and host
         principals.
         </description>
    </property>

<property>
         <!--cluster variant -->
         <name>dfs.secondary.http.address</name>
         <value>hdfs-master.cloud.com:50090</value>
         <description>Address of secondary namenode web server</description>
    </property>

    <property>
         <name>dfs.secondary.https.port</name>
         <value>50490</value>
         <description>The https port where secondary-namenode binds</description>
    </property>
<property>
<name>dfs.web.authentication.kerberos.principal</name>
<value>HTTP/_HOST@CLOUD.COM</value>
</property>

<property>
<name>dfs.block.access.token.enable</name>
<value>true</value>
</property>


<!-- DataNode security config -->
<property>
<name>dfs.datanode.data.dir.perm</name>
<value>750</value>
</property>
<property>
<name>dfs.datanode.http.address</name>
<value>0.0.0.0:50020</value>
</property>
<property>
<name>dfs.datanode.keytab.file</name>
<value>/etc/security/keytabs/hduser.keytab</value>
</property>
<property>
<name>dfs.datanode.kerberos.principal</name>
<value>hduser/_HOST@CLOUD.COM</value>
</property>
<property>
<name>dfs.datanode.https.address</name>
<value>0.0.0.0:50475</value>
</property>
<property>
<name>dfs.datanode.ipc.address</name>
<value>0.0.0.0:8010</value>
</property>
<property>
<name>dfs.datanode.address</name>
<value>0.0.0.0:50010</value>
</property>
<property>
  <name>dfs.data.transfer.protection</name>
  <value>integrity</value>
</property>
<property>
  <name>dfs.http.policy</name>
  <value>HTTPS_ONLY</value>
</property>
<property>
         <name>dfs.permissions.supergroup</name>
         <value>hadoop</value>
         <description>The name of the group of super-users.</description>
    </property>

</configuration>
